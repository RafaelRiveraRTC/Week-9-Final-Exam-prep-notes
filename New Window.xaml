                    <TranslateTransform Y="0.018"/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <RadioButton Content="RadioButton" Margin="157,355,459,-18" RenderTransformOrigin="0.5,0.5" Checked="RadioButton_Checked">
