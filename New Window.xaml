        mc:Ignorable="d"
        Title="New_Window" Height="450" Width="800">
    <Grid>
        <Canvas Margin="33,39,461,19" Background="#FF8E8E8E">
            <Label 
                Content="Name"/>
            <Label 
                Content="Manufacturer" Canvas.Left="1" Canvas.Top="45"/>
            <Label 
                Content="Price" Canvas.Left="4" Canvas.Top="92"/>
            <Label 
                Content="Description&#xD;&#xA;" Canvas.Top="140" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label 
                Content="" Canvas.Left="-1" Canvas.Top="240" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Category" Canvas.Top="292" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="8"/>
