                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.019"/>
                    <RotateTransform Angle="-0.477"/>
                    <TranslateTransform Y="0.018"/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <RadioButton Content="RadioButton" Margin="157,336,459,1" RenderTransformOrigin="0.5,0.5" Checked="RadioButton_Checked">
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.019"/>
                    <RotateTransform Angle="-0.477"/>
                    <TranslateTransform Y="0.018"/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>

    </Grid>
